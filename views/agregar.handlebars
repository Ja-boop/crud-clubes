<div class="borde" id="container-form-agregar">
    <form method="POST" target="/equipos/agregar">
        
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input name="name" type="text" class="form-control" placeholder="Arsenal FC" autofocus required>
        </div>
        
        <div class="form-group">
            <label for="short-name">Nombre Corto</label>
            <input name="shortName" type="text" class="form-control" placeholder="Arsenal" required>
        </div>

        <div class="form-group">
            <label for="tla">TLA</label>
            <input name="tla" type="text" class="form-control" placeholder="ARS" required>
        </div>

        <div class="form-group">
            <label for="area">Area</label>
            <input name="area" type="text" class="form-control" placeholder="Inglaterra" required>
        </div>

        <div class="form-group">
            <label for="imagen-escudo">Escudo</label>
            <input type="url" name="crestUrl" class="form-control" placeholder="Ingresa una URL con la imagen del escudo" required>
        </div>
        
        <div class="form-group">
            <label for="direccion">Direcci√≥n</label>
            <input name="address" type="text" class="form-control" placeholder="Calle 124" required>
        </div>

        <div class="form-group">
            <label for="numero-telefono">Numero de telefono</label>
            <input name="phone" type="text" class="form-control" placeholder="3764 284573" required>
        </div>

        <div class="form-group">
            <label for="website">Website del equipo</label>
            <input name="website" type="url" class="form-control" placeholder="www.arsenalfc.com" required>
        </div>

        <div class="form-group">
            <label for="fundacion">Fundacion</label>
            <input name="founded" type="number" class="form-control" placeholder="1886" required>
        </div>

        <div class="form-group">
            <label for="email">Email del equipo</label>
            <input name="email" type="text" class="form-control" placeholder="arsenalfc@gmail.com" required>
        </div>

        <div class="form-group">
            <label for="equipo-colores">Colores del equipo</label>
            <input name="clubColors" type="text" class="form-control" placeholder="Blanco / Rojo" required>
        </div>

        <div class="form-group">
            <label for="estadio-nombre">Nombre del estadio</label>
            <input name="venue" type="text" class="form-control" placeholder="Emirates Stadium" required>
        </div>

        <div class="form-group">
            <input type="submit" value="Enviar" class="form-input">
        </div>

    </form>
</div>
